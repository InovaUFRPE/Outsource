<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.outsource.inovaufrpe.usuario.application.CadastroServicoActivity">

    <EditText
        android:textColor="@color/colorBlack"
        android:id="@+id/etNomeServicoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/nome" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <EditText
        android:id="@+id/etDescricaoServicoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/descricao" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />


    <EditText
        android:id="@+id/etPrecoServicoID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preco"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Space
        android:layout_width="0dp"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btConfirmarID"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btVoltarID"
            android:layout_alignBottom="@+id/btVoltarID"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp"
            android:layout_weight="1"
            android:text="@string/confirmar" />

        <Button
            android:id="@+id/btVoltarID"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="84dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:text="@string/voltar" />
    </RelativeLayout>

</LinearLayout>
