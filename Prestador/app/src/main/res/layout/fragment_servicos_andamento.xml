<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultActivities"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    tools:context=".servico.gui.ServicosAndamentoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/btRecycleID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Serviços em Negociação >"
            android:textOn="Serviços em Negociação \\/" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/RecycleID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/btRecycle2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOff="Serviços em Andamento >"
            android:textOn="Serviços em Andamento \\/" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/Recycle2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
