<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layoutPrestador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoPrestador"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/default_profile"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tvNomeOfertante"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivFotoPrestador"
            android:layout_toRightOf="@+id/ivFotoPrestador"
            android:text="@string/solicitante_nome_exemplo" />

        <TextView
            android:id="@+id/tvMoeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPrecoOrcamento"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvPrecoOrcamento"
            android:layout_toStartOf="@+id/tvPrecoOrcamento"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/tvPrecoOrcamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvCentavos"
            android:layout_toStartOf="@+id/tvCentavos"
            android:gravity="end"
            android:text="@string/dinheiro_exemplo"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCentavos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPrecoOrcamento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textSize="17sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>