<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DefaultActivities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.outsource.inovaufrpe.usuario.servico.gui.ServicosAndamentoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/spinner_estado_servico_header"
        android:textStyle="bold"
        tools:targetApi="o" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginVertical="8dp"
        android:entries="@array/tipos_servicos_andamento"
        android:padding="16dp"
        tools:targetApi="o" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecycleID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Recycle2ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nenhum_servico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nenhum_servico"
        android:textAlignment="center" />

</LinearLayout>