<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="com.outsource.inovaufrpe.usuario.application.CadastroActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/cardview_light_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastre-se no Outsource"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="20dp"/>


            <EditText
                android:id="@+id/etNomeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Primeiro nome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etSobrenomeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Último nome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etEmailID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etTelefoneID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Celular"
                android:inputType="phone" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Aceito os termos de uso e a política de privacidade"/>

            <Button
                android:id="@+id/btCadastrarID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorAccent"
                android:text="Cadastrar" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
