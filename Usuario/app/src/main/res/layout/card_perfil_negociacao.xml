<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/ivFotoPrestador"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/me1" />

        <TextView
            android:id="@+id/tvNomePrestador"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivFotoPrestador"
            android:layout_toRightOf="@+id/ivFotoPrestador"
            android:text="Gabriel LourenÃ§o" />

        <TextView
            android:id="@+id/tvMoeda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPrecoOrcamento"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvPrecoOrcamento"
            android:layout_toStartOf="@+id/tvPrecoOrcamento" />

        <TextView
            android:id="@+id/tvPrecoOrcamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvCentavos"
            android:layout_toStartOf="@+id/tvCentavos"
            android:text="R$ 100,00"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCentavos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvPrecoOrcamento"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>