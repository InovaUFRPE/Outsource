<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:id="@+id/layoutPrestador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoPrestador"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/default_profile" />

        <TextView
            android:id="@+id/tvNomeOfertanteID"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ivFotoPrestador"
            android:layout_toRightOf="@+id/ivFotoPrestador"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOfertaValorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvTempoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvNomeOfertanteID"
            android:layout_alignStart="@+id/tvNomeOfertanteID"
            android:layout_below="@+id/tvNomeOfertanteID"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>